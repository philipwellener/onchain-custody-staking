{
  "env": {
    "es2021": true,
    "node": true,
    "mocha": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "ignorePatterns": ["dist/", "node_modules/", "typechain-types/", "artifacts/"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off"
  }
}
